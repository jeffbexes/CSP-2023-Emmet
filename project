#counter setup
counter.hideturtle()
counter.penup()
counter.goto(0,150)
#timer
timer = 120
counter_interval=1000
timer_up=False

#score
score=0

#lists
bullet_fired=[]
barrier_shot=[]

#font setup
font_setup=("Comic Sans", 20, "bold")
#ship setup
def turn_left():
    turn_left=ship.left(5)
def turn_right():
    turn_right=ship.right(5)
ship.shape("classic")
ship.color("blue")
wn.onkeypress(turn_left,"a")
wn.onkeypress(turn_right,"d")
wn.listen()
ship_alive=True
while ship_alive:
    if (abs(ship.pos() - barrier.pos())>10):
        ship_alive=False
#import statements
import turtle as trtl
import random as rand
import time
#game setup
#initiate turtles
barrier=trtl.Turtle()

ship=trtl.Turtle()
counter=trtl.Turtle()

wn=trtl.Screen()

#counter setup
counter.hideturtle()
counter.penup()
counter.goto(450,350)
#timer
timer = 30
counter_interval=1000
timer_up=False

#score
score=0

#lists
bullet_fired=[]
barrier_shot=[]

#font setup
font_setup=("Comic Sans", 20, "bold")
#ship setup
def turn_left():
    turn_left=ship.left(2)
def turn_right():
    turn_right=ship.right(2)
ship.shape("classic")
ship.color("blue")
wn.onkeypress(turn_left,"a")
wn.onkeypress(turn_right,"d")
wn.listen()
ship_alive=True

    
#funcitons
def shoot():
    bullet=trtl.Turtle()
    bullet.shape("circle")
    bullet.turtlesize(1-0.7)
    bullet.speed(0)
    bullet.color("#ff0000")
    bullet_fired.append(bullet)
    fire = bullet_fired.pop(0)
    b_angle=ship.heading()
    bullet.setheading(b_angle)
    bullet.forward(300)
    bullet.hideturtle()
    time.sleep(0.5)
    bullet.clear()
    if (abs(bullet.pos() - barrier.pos())>30):
        score+1
def death():
    while ship_alive:
        if (abs(ship.pos() - barrier.pos())>10):
            ship_alive=False

def countdown():
    global timer, timer_up
    counter.clear()
    if timer<=0:
        counter.write("timer ",font=font_setup)
        timer_up=True
        counter.hideturtle()
    else:
        counter.write("timer: " + str(timer), font=font_setup)
        timer-=1
        counter.getscreen().ontimer(countdown, counter_interval)

def bar_g():
    for step in range(100):
        barrier.penup()
        random_angles=rand.randint(1,360)
        rand_x=rand.randint(-200,200)
        rand_y=rand.randint(-300,300)
        barrier.append
        for step in range (100):
            barrier.penup()
            barrier.setheading(random_angles)
            barrier.goto(rand_x,rand_y)
            




#events
wn.ontimer(countdown, counter_interval)
wn.onkey(shoot,"w")
time.sleep(0.2)
bar_g()


print (score)
wn.bgcolor("white")
wn.mainloop()
